fun testPage(msg){
  page
  <html>
    <body>
      <div id="p">
        <p>LALA</p>
      </div>
      <a href="" l:onclick="{changeContent()}">Click me</a>
    </body>
  </html>
}
fun changeContent(){
  replaceNode(
    <div id="p">
      <form l:action="{testPage(i)}" method="post">
        <input type="text" l:name="i" value="" />
      </form>
    </div>,
    getNodeById("p")
  )
}
